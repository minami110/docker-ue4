#!/bin/bash

export OPENJDK_VERSION="8"
export ANDROID_COMMANDLINE_TOOLS="6609375"
export ANDROID_BUILD_TOOLS="30.0.1"
export ANDROID_NDK="21.1.6352462"
export ANDROID_PLATFORMS="30"

# build image
docker build \
--tag ${IMAGE_NAME} \
--build-arg OPENJDK_VERSION=${OPENJDK_VERSION} \
--build-arg ANDROID_COMMANDLINE_TOOLS=${ANDROID_COMMANDLINE_TOOLS} \
--build-arg ANDROID_BUILD_TOOLS=${ANDROID_BUILD_TOOLS} \
--build-arg ANDROID_NDK=${ANDROID_NDK} \
--build-arg ANDROID_PLATFORMS=${ANDROID_PLATFORMS} \
--no-cache \
.
